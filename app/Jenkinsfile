pipeline {
  agent any

  environment {
    NODE_VERSION = "18"
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install Node') {
      steps {
        sh """
        curl -fsSL https://deb.nodesource.com/setup_${NODE_VERSION}.x | bash -
        apt-get install -y nodejs
        node -v
        npm -v
        """
      }
    }

    stage('Install Dependencies') {
      steps {
        sh 'npm install'
      }
    }

    stage('Lint') {
      steps {
        sh 'npm run lint'
      }
    }

    stage('Unit Tests') {
      steps {
        sh 'npm test -- --ci --watchAll=false'
      }
    }

    stage('Build Next.js') {
      steps {
        sh 'npm run build'
        sh 'npm run export'
      }
    }

    stage('Archive Export') {
      steps {
        archiveArtifacts artifacts: 'out/**', fingerprint: true
      }
    }
  }

  post {
    always {
      junit '**/junit.xml'
      cleanWs()
    }
  }
}
